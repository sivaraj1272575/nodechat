doctype html
html
head
    title Nodechat
    meta(name="viewport" content="width=device-width, initial-scale=1.0" charset="utf-8")
    link(rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css")
    script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous")
    link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous")
    link(rel="stylesheet" href="../css/style.css" crossorigin="anonymous")
    body
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
            .container-fluid
                
                a(class="navbar-brand" href="/") Node Chat
                button.navbar-toggler(data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation")
                    span.navbar-toggler-icon
                div(class="collapse navbar-collapse" id="navbarText")
                    ul.navbar-nav.mr-auto
                        li.nav-item
                            a.nav-link(href="/home") Home                          
                        li.nav-item
                            a.nav-link(href="/user/friends") Friends
                        li.nav-item
                            a.nav-link(href="/group/") Group
                        li.nav-item
                            a.nav-link(href="#") Status
                    ul.navbar-nav.ml-auto.nav-flex-icons
                        li.nav-item.avatar
                            a.nav-link.p-0(class = "nav-link" id="navbarDropdownMenuLink-333" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style = "cursor: pointer")
                                img(class = "rounded-circle" src = user.profile style="width: 40px; height: 40px;")
                            div(class="dropdown-menu dropdown-menu-right dropdown-default" aria-labelledby="navbarDropdownMenuLink-333")
                                p.strong(class = "dropdown-item") #{user.name}
                                p.strong(class = "dropdown-item") #{user.email}
                                a(class = "dropdown-item" href="/logout") Logout
                        li.nav-item.dropdown
                            a(class = "nav-link dropdown-toggle" id="navbarDropdownMenuLink-333" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                                i.fas.fa-user
                            div(class="dropdown-menu dropdown-menu-right dropdown-default" aria-labelledby="navbarDropdownMenuLink-333")
                                a(class = "dropdown-item" href="#") Change Profile
                                a(class = "dropdown-item" href="/user/forgotPassword") Reset Password
        .container
            !=messages('message',locals)
    block content